@page
@model MomoMecha.Pages.BacklogPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Backlog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Backlog.Name" class="control-label"></label>
                <input asp-for="Backlog.Name" class="form-control" />
                <span asp-validation-for="Backlog.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backlog.Series" class="control-label"></label>
                <select asp-for="Backlog.Series"
                        asp-items="Model.SeriesItems.Select(item => new SelectListItem(item, item))"
                        class="form-control">
                    <option disabled selected value="">Select a Series</option>
                </select>
                <span asp-validation-for="Backlog.Series" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backlog.Grade" class="control-label"></label>
                <select asp-for="Backlog.Grade"
                        asp-items="Model.GradeItems.Select(item => new SelectListItem(item, item))"
                        class="form-control">
                    <option disabled selected value="">Select a Grade</option>
                </select>
                <span asp-validation-for="Backlog.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backlog.Scale" class="control-label"></label>
                <select asp-for="Backlog.Scale"
                        asp-items="Model.ScaleItems.Select(item => new SelectListItem(item, item))"
                        class="form-control">
                    <option disabled selected value="">Select a Scale</option>
                </select>
                <span asp-validation-for="Backlog.Scale" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
